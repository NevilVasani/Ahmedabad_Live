<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ForgotpasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="60dp"
        android:background="@drawable/custom_forgotpassword"
        >

        <TextView
            style="@style/textview"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="Forgot Password"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/forgotpassword_username"
            style="@style/edittext_center_bold_margin_padding"
            android:drawableLeft="@drawable/user"
            android:hint="Username"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/forgotpassword_password"
                style="@style/edittext_center_bold_margin_padding"
                android:drawableLeft="@drawable/lock"
                android:hint="Enter new Password"
                android:inputType="textPassword"
                android:maxLength="12"
                />

            <ImageView
                android:id="@+id/forgot_new_not_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/disabled_visible_24"
                android:layout_gravity="end"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:id="@+id/forgot_new_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/visible_24"
                android:layout_gravity="end"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/forgotpassword_confirmpassword"
                style="@style/edittext_center_bold_margin_padding"
                android:drawableLeft="@drawable/lock"
                android:hint="Confirm new Password"
                android:inputType="textPassword"
                android:maxLength="12"
                />

            <ImageView
                android:id="@+id/forgot_new_confirm_not_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/disabled_visible_24"
                android:layout_gravity="end"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:id="@+id/forgot_new_confirm_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/visible_24"
                android:layout_gravity="end"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                />
        </FrameLayout>

        <Button
            android:id="@+id/forgotpassword_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="20dp"
            android:text="Change Password" />
    </LinearLayout>
</LinearLayout>