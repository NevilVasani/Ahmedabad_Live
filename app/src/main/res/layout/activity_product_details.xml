<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/product_details_image"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/product_detail_wishlist"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/wishlist_empty"
                    android:layout_margin="@dimen/_10sdp"

                    />

                <ImageView
                    android:id="@+id/product_detail_bag"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/shoping_bag"
                    android:layout_margin="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:id="@+id/product_detail_qtyLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    >

                    <ImageView
                        android:id="@+id/product_detail_minus"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/minus" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/product_detailt_qty"
                        style="@style/textview_18_bold"
                        android:layout_marginHorizontal="@dimen/_10sdp" />

                    <ImageView
                        android:id="@+id/product_detail_plus"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/plus" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/product_details_name"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                style="@style/textview_16"
                />

            <TextView
                android:id="@+id/product_details_price"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                style="@style/textview_16"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/product_details_description"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                style="@style/textview_16"
                android:textSize="@dimen/_13sdp"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>