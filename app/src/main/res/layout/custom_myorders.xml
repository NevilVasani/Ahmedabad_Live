<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/custom_myorders_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/custom_myorders_orderid"
                android:layout_weight="1"
                style="@style/textview_18_bold"/>

            <TextView
                android:id="@+id/custom_myorders_price"
                android:gravity="end"
                android:textStyle="bold"
                android:layout_weight="1"
                style="@style/textview_16"/>
        </LinearLayout>

        <TextView
            android:id="@+id/custom_myorders_address"
            android:layout_marginTop="@dimen/_3sdp"
            style="@style/textview_16"/>

        <TextView
            android:id="@+id/custom_myorders_payvia"
            android:layout_marginTop="@dimen/_3sdp"
            style="@style/textview_14"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>